@model LoginViewModel

<h4>Вход в личный кабинет</h4>

<form method="post">
  <!-- Email input -->
  <div class="col-3">
    <label class="form-label">Логин</label>
    <input type="text" asp-for="Login" class="form-control" />
    <span asp-validation-for="Login"></span>
  </div>

  <!-- Password input -->
  <div class="col-3">
    <label class="form-label">Пароль</label>
    <input type="password" asp-for="Password" class="form-control"/>
    <span asp-validation-for="Password"></span>
  </div>

  <!-- 2 column grid layout for inline styling -->
  <div class="gy-xl-2 my-2">
    <div class="col">
      <!-- Checkbox -->
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
        <label class="form-check-label" for="form2Example31">Запомнить меня</label>
      </div>
    </div>

    <div class="col my-2">
      <!-- Simple link -->
      <a href="#!">Забыли пароль?</a>
    </div>
  </div>

  <!-- Submit button -->
  <button type="submit" class="btn btn-primary btn-block mx-auto my-2">Вход</button>

  <!-- Register buttons -->
  <div class="align-content-md-start my-2">
    <p>Не зарегистрирован? <a class="nav-pills" asp-controller="Account" asp-action="Register">Зарегистрироваться</a></p>
  </div>
</form>