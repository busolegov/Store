@model IQueryable<Store.Models.Entities.Product>

 <h2>Каталог товаров</h2>

@*<form method="post" asp-action="Index">*@
    <div class="container p-4">
        <div>
            @if (Model.Count() > 0)
            {
                <table class="tab-content table-bordered table-hover table-striped" style="width: 100%; height: auto">
                    <thead class="align-content-center">
                    <tr>
                        <th>
                            Наменование товара
                        </th>
                        <th>
                            Описание
                        </th>
                        <th>
                            Цена
                        </th>
                        <th>
                            Купить
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Title</td>
                                <td>@product.Subtitle</td>
                                <td>@product.Price</td>
                                <td>
@*                                    <input type="submit" class="btn-success" value="В корзину" asp-route-Id="@product.Id" asp-route-return></input>*@
                                    <a class="btn btn-dark" asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-Id="@product.Id">Добавить в корзину</a>
                                    @*<button type="submit" >В корзину</button>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
@*</form>*@

