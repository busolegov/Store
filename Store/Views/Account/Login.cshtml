@model LoginViewModel

<h4>Вход в личный кабинет</h4>

<form method="post">

  <div class="col-3">
    <label class="form-label">Логин</label>
    <input type="text" asp-for="Login" class="form-control" />
    <span asp-validation-for="Login" class="text-danger"></span>
  </div>

  <div class="col-3">
    <label class="col-form-label">Пароль</label>
    <input type="password" asp-for="Password" class="form-control"/>
    <span asp-validation-for="Password" class="text-danger"></span>
  </div>

  <div class="gy-xl-2 my-2">
    <div class="col">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value=""/>
        <label class="form-check-label" for="form2Example31">Запомнить меня</label>
      </div>
    </div>

    <div class="col my-2">
      <a href="#!">Забыли пароль?</a>
    </div>
  </div>

  <button type="submit" class="btn btn-primary btn-block mx-auto my-2">Вход</button>

  <div class="align-content-md-start my-2">
    <p>Не зарегистрирован? <a class="nav-pills" asp-controller="Account" asp-action="Register">Зарегистрироваться</a></p>
  </div>
</form>
