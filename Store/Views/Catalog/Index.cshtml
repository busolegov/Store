@model IQueryable<Store.Models.Entities.Product>

<div class="container p-4">
    <h2>Каталог товаров</h2>
    
    <div>
        @if (Model.Count() > 0)
        {
            <table class="tab-content table-bordered table-hover table-striped" style="width: 100%; height: auto">
                <thead class="text-decoration-line-through">
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Наменование товара
                    </th>
                    <th>
                        Описание
                    </th>
                    <th>
                        Цена
                    </th>
                    <th>
                        Купить
                    </th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Title</td>
                            <td>@product.Subtitle</td>
                            <td>@product.Price</td>
                            <td>
                                <div>
                                    <a asp-action=""></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

