@model IQueryable<Store.Models.Entities.Product>

 <h2>Каталог товаров</h2>

@*<form method="post" asp-action="Index">*@
    <div class="container p-4">
        <div>
            @if (Model.Count() > 0)
            {
                <table class="tab-content table-bordered table-hover table-striped" style="width: 100%; height: auto">
                    <thead class="align-content-center">
                    <tr>
                        <th>
                            Наменование товара
                        </th>
                        <th>
                            Описание
                        </th>
                        <th>
                            Цена
                        </th>
                        <th>
                            Купить
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Title</td>
                                <td>@product.Subtitle</td>
                                <td>@product.Price</td>
                                <td>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                    <a class="btn btn-dark" asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-Id="@product.Id">Добавить в корзину</a>
                                    }
                                    else
                                    {
                                    <a class="btn btn-dark" asp-controller="Account" asp-action="Login">Добавить в корзину</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

<div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card">
                    <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@product.Title</h5>
                        <p class="card-text">@product.Subtitle</p>
                        @if (User.Identity.IsAuthenticated)
                                    {
                                    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-Id="@product.Id">Добавить в корзину</a>
                                    }
                                    else
                                    {
                                    <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Добавить в корзину</a>
                                    }
                    </div>
                </div>
            </div>
        }
</div>
@*</form>*@

