@model IQueryable<Store.Models.Entities.Product>

<div>
    @await Component.InvokeAsync("User")
</div>

<div class="container p-4">
    <h2>Каталог товаров</h2>

    <div>
        @if (Model.Count() > 0)
        {
            <table class="tab-content table-bordered table-hover table-striped" style="width: 100%; height: auto">
                <thead class="align-content-center">
                <tr>
                    <th>
                        Наменование товара
                    </th>
                    <th>
                        Описание
                    </th>
                    <th>
                        Цена
                    </th>
                    <th>
                        Купить
                    </th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Title</td>
                            <td>@product.Subtitle</td>
                            <td>@product.Price</td>
                            <td>
                                <button type="submit" >В корзину</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

